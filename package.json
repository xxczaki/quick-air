{
    "name": "quick-air",
    "version": "1.0.0",
    "description": "Check air quality near you quickly, using Airly API",
    "private": true,
    "scripts": {
        "build": "next build",
        "dev": "next dev",
        "start": "next start",
        "cy:open": "cypress open",
        "cy:run": "cypress run",
        "test": "xo && ava && start-server-and-test dev http://localhost:3000 cy:run"
	},
	"engines": {
		"node": "latest"
	},
    "ava": {
        "require": [
            "@babel/register",
            "./test/helpers/_ignore-utils.js"
        ]
    },
    "xo": {
        "envs": [
            "node",
            "browser"
        ],
        "globals": [
            "cy",
            "Cypress",
            "it",
            "describe"
        ],
        "extends": "xo-react",
        "nodeVersion": ">=10",
        "parser": "babel-eslint",
        "rules": {
            "import/no-unassigned-import": "off",
            "import/no-unresolved": "off",
            "react/jsx-child-element-spacing": "off",
            "no-negated-condition": "off"
        },
        "settings": {
            "react": {
                "version": "16.12"
            }
        },
        "ignores": [
            "cypress/plugins"
        ]
    },
    "dependencies": {
        "@chakra-ui/core": "^0.5.2",
        "@emotion/core": "^10.0.27",
        "@emotion/styled": "^10.0.27",
        "airly": "^3.1.0",
        "chart.js": "^2.9.3",
        "core-js": "^3.6.2",
        "date-fns": "^2.9.0",
        "emotion-theming": "^10.0.27",
        "haversine": "^1.1.1",
        "leaflet": "^1.6.0",
        "next": "^9.1.7",
        "prop-types": "^15.7.2",
        "react": "^16.12.0",
        "react-chartjs-2": "^2.8.0",
        "react-dom": "^16.12.0",
        "react-leaflet": "^2.6.1",
        "react-use-form-state": "^0.12.1"
    },
    "devDependencies": {
        "@babel/core": "^7.7.7",
        "@babel/register": "^7.7.7",
        "ava": "^2.4.0",
        "babel-eslint": "^10.0.3",
        "babel-plugin-emotion": "^10.0.27",
        "cypress": "^3.8.1",
        "eslint-config-xo-react": "^0.22.0",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^2.3.0",
        "imagemin-svgo": "^7.0.0",
        "next-fonts": "^0.19.0",
        "next-offline": "^4.0.6",
        "next-optimized-images": "^2.5.4",
        "react-test-renderer": "^16.12.0",
        "require-hacker": "^3.0.1",
        "start-server-and-test": "^1.10.6",
        "xo": "^0.25.3"
    }
}
